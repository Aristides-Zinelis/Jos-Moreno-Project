{% extends 'ArisFrontBundle::layout.html.twig' %}
{% block title %}Jose {% endblock %}
{% block styles %} 
    <link href="{{ asset('css/style.css')}}" rel="stylesheet" />
    <link href="{{ asset('css/font-awesome.min.css')}}" rel="stylesheet" />
    <link rel="stylesheet" href="{{ asset('css/normalize.css')}}" type="text/css" media="screen">
    <link href="{{ asset('css/custom.css')}}" rel="stylesheet" />
     <link rel="stylesheet" href="{{ asset('css/touchTouch.css')}}" type="text/css" media="screen">
    <link rel="stylesheet" href="{{ asset('css/contacto.css')}}" type="text/css" media="screen">
{% endblock %}
{% block scripts %}

{% endblock %}
{% block content %} 
  
    <div class="container">
	
      <div class="col-md-12">
        <div >
            <form class="form-horizontal" method="post" action="{{ path('aris_front_contacto') }}">
         
              <legend class="text-center header"><div class="section-header">
                        <h2 class="smt"><span>Contacto</span></h2>
                    </div></legend> 
                 <div class="clear"></div>
            {% for flashMessage in app.session.flashbag.get('notice') %}
        <div class="alert text-center">
            <em>Aviso</em>: {{ flashMessage }}
        </div>
    {% endfor %}
     <div class="clear"></div>
     {% for flashMessage in app.session.flashbag.get('error') %}
        <div class="alert alert-danger">
            <em>Aviso</em>: {{ flashMessage }}
        </div>
         
    {% endfor %}
            <div class="form-group">              
              <span class="col-md-1 col-md-offset-2 text-center"><i class="fa fa-user bigicon"></i></span>              
              <div class="col-md-6">
                  <input id="fname" name="name" required="true" type="text" placeholder="Nombre y Apellidos" class="form-control">
              </div>
            </div>    
               
            
            <div class="form-group">
              <span class="col-md-1 col-md-offset-2 text-center"><i class="fa fa-envelope-o bigicon"></i></span>
              <div class="col-md-6">
                <input id="email" name="email" required="true" type="email" placeholder="Email" class="form-control">
              </div>
            </div>

              <div class="form-group">
              <span class="col-md-1 col-md-offset-2 text-center"><i class="fa fa-phone-square bigicon"></i></span>
              <div class="col-md-6">
                <input id="phone" name="phone" type="text" placeholder="Telefono" class="form-control">
              </div>
            </div>
    
            <div class="form-group">
              <span class="col-md-1 col-md-offset-2 text-center"><i class="fa fa-pencil-square-o bigicon"></i></span>
              <div class="col-md-6">
                <textarea class="form-control" id="message" name="message" required="true" placeholder="Â¿Que desea contarme?" rows="7"></textarea>
              </div>
            </div>
    
            <div class="form-group">
              <div class="col-md-12 text-center">
                <button type="submit" class="btn btn-bordered white">Enviar</button>
              </div>
            </div>
          
          </form>
        </div>
      </div>
	
</div>
    	
       



{% endblock %} 
{% block finalScripts %}
     <!-- Easing core JavaScript -->
    <script language="javascript" src="{{ asset('js/jquery.easing.1.3.js')}}"></script>
	<!-- Bootstrap core JavaScript -->
    <script language="javascript" src="{{ asset('js/bootstrap.js')}}"></script>
    
    <script language="javascript" src="{{ asset('js/touchTouch.jquery.js')}}" ></script>
    <script language="javascript" src="{{ asset('js/waypoints.min.js')}}"></script>
    <script type="text/javascript" src="{{ asset('js/jquery.mixitup.min.js')}}"></script>
            
